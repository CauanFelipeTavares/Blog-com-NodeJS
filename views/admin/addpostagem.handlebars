<div class="card">
    <div class="card-body">
        <h3>Nova Postagem</h3>
        <form action="">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control mt-2"></textarea>
            <label name="categoria">Categoria:</label>
            <br>
            <select name="categoria" class="form-select form-select-lg mb-3">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success">Criar postagem</button>
        </form>
    </div>
</div>
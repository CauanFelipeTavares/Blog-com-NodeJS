<h2>Lista de Categorias:</h2>
<br>
<a href="/admin/categorias/add"><button class="btn btn-success">NOVA CATEGORIA</button></a>

{{#each categorias}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <p>{{slug}}</p>
            <br>
            <p>Data de Publicação: {{date}}</p>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar Categoria</button></a>
            <form action="/admin/categorias/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type='submit' class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>

{{else}}

    <h2 class="mt-4">Nenhuma Categoria Registrada</h2>

{{/each}}